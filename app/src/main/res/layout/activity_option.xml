<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionActivity"
    tools:layout_editor_absoluteX="-30dp"
    tools:layout_editor_absoluteY="26dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/dunggeunmo"
        android:text="지금 식물의 상태는..."
        android:textSize="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/NameLayout1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="185dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dunggeunmo"
            android:text="🌱 토양 습도 "
            android:textSize="20dp" />

        <Space
            android:layout_width="50dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dunggeunmo"
            android:text="💧 남은 물 양"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pBarLayout1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NameLayout1">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/pBarSoilHumidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="100"
            android:progress="40"
            android:progressTint="#0103A9F4"
            app:indicatorColor="#4CAF50"
            app:indicatorSize="150dp"
            app:indicatorTrackGapSize="2dp"
            app:trackThickness="10dp" />
        <Space
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/pBarWater"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:backgroundTint="@color/white"
            android:max="100"
            android:progress="50"
            app:indicatorColor="#9FDCFA"
            app:indicatorSize="150dp"
            app:indicatorTrackGapSize="2dp"
            app:trackThickness="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/NameLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pBarLayout1">

        <TextView
            android:id="@+id/nameTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dunggeunmo"
            android:text="🌡️ 공기 중 온도"
            android:textSize="20dp" />

        <Space
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/nameHumidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dunggeunmo"
            android:text="🫧 공기 중 습도"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pBarLayout2"
        android:layout_width="600dp"
        android:layout_height="0dp"
        android:layout_marginStart="-93dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/NameTag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NameLayout2"
        app:layout_constraintVertical_bias="1.0">

        <ProgressBar
            android:id="@+id/pBarAirTemperature"
            style="@style/CustomVerticalProgressBar"
            android:indeterminateDrawable="@drawable/progressbar_design_theme"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:max="60"
            android:progress="26"

            android:progressTint="#FF5722"
            android:rotation="270" />

        <ProgressBar
            android:id="@+id/pBarAirHumidity"
            style="@style/CustomVerticalProgressBar"
            android:indeterminateDrawable="@drawable/progressbar_design_theme"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:max="100"
            android:progress="50"
            android:progressTint="#00BCD4"
            android:rotation="270" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/NameTag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/percentAirTemperature"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/dunggeunmo"
            android:text="26 도"
            android:textSize="20dp" />

        <Space
            android:layout_width="160dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/percentAirHumidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dunggeunmo"
            android:text="50 %"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/percentHumid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="65dp"
        android:fontFamily="@font/dunggeunmo"
        android:text="30 %"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pBarLayout1" />

    <TextView
        android:id="@+id/percentWater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="184dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="183dp"
        android:fontFamily="@font/dunggeunmo"
        android:text="50 %"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@+id/pBarLayout2"
        app:layout_constraintStart_toStartOf="@+id/percentHumid"
        app:layout_constraintTop_toTopOf="@+id/pBarLayout1" />


</androidx.constraintlayout.widget.ConstraintLayout>










